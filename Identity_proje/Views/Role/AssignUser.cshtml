@model AssignVM

<div class="row">
    <div class="card col-md-8 offset-2">
        <div class=" card card-header">
            <h3> Rol Yönetim Paneli</h3>
        </div>
        <div class="card-body">
            <form asp-action="AssignUser" method="post">
                <input type="hidden" asp-for="RoleName"/>
                <div class="row">
                    <div class="col-md-6">
                        <h5>Kuallnıcıyı @Model.RoleName Rolüne ekle</h5>
                        <table class="table table-striped">
                            @if (Model.HasNotRole.Count()==0)
                            {
                                <tr><td>Bütün Herkes bu Rolde</td></tr>

                            }
                            else
                            {
                                foreach (var item in Model.HasNotRole)
                                {
                                    <tr>
                                        <td>@item.UserName</td>
                                        <td><input type="checkbox" value="@item.Id" name="AddIds" /></td>
                                    </tr>
                                }
                            }

                        </table>
                    </div>
                    <div class="col-md-6">
                        <h5>Kuallnıcıyı @Model.RoleName Rolünden çıkar</h5>
                        <table class="table table-striped">
                            @if (Model.HasRole.Count() == 0)
                            {
                                <tr><td>Bütün Herkes bu Rolde</td></tr>

                            }
                            else
                            {
                                foreach (var item in Model.HasRole)
                                {
                                    <tr>
                                        <td>@item.UserName</td>
                                        <td><input type="checkbox" value="@item.Id" name="DeleteIds" /></td>
                                    </tr>
                                }
                            }

                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <input type="submit" value="Rol Ata" class="btn btn-success"/>
                    </div>

                </div>
            </form>
        </div>

    </div>


</div>